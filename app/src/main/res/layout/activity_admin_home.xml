<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:layout_centerInParent="true"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="직원 관리"
                android:id="@+id/button_employee_changes"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="메뉴 관리"
                android:id="@+id/button_dish_changes"
                android:layout_marginTop="29dp"
                android:layout_below="@+id/button_employee_changes"
                android:layout_alignLeft="@+id/button_employee_changes"
                android:layout_alignStart="@+id/button_employee_changes"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"/>

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>